def limpiar_texto(texto):
    if pd.isna(texto):
        return ""
    texto = texto.lower().strip()
    texto = "".join(c for c in unicodedata.normalize("NFD", texto)
                    if unicodedata.category(c) != "Mn")
    texto = texto.replace("√±", "n")
    return texto



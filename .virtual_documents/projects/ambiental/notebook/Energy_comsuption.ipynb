import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from matplotlib.colors import LinearSegmentedColormap
from sklearn.linear_model import LinearRegression

# =========================
# Crear predicciones por país para 2025
# =========================
# Requisitos:
# - Usar columnas del dataset: Entity, Code (ISO), Year, energy_column
# - Hacer una regresión lineal simple por país (Year -> energy_column)
# - Si un país tiene muy pocos datos, usar el último valor disponible

def predict_2025_per_entity(df, min_points=3):
    records = []
    for code, sub in df.groupby("Code"):
        sub = sub.dropna(subset=[energy_column, "Year"]).sort_values("Year")
        entity_name = sub["Entity"].iloc[-1] if not sub.empty else np.nan

        if len(sub) >= min_points and sub["Year"].nunique() >= min_points:
            X = sub[["Year"]].values
            y = sub[energy_column].values
            model = LinearRegression()
            model.fit(X, y)
            pred_2025 = float(model.predict(np.array([[2025]]))[0])
        else:
            # Fallback: último valor conocido
            pred_2025 = float(sub[energy_column].iloc[-1]) if not sub.empty else np.nan

        records.append({"Entity": entity_name, "Code": code, "Predicted_2025": pred_2025})

    return pd.DataFrame(records)

predictions_2025 = predict_2025_per_entity(dataset)

# Limpieza básica: eliminar predicciones nulas
predictions_2025 = predictions_2025.dropna(subset=["Predicted_2025"])

# =========================
# Merge mapa + predicciones (usando ISO para coincidir con tu bloque previo)
# =========================
